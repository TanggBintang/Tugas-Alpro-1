print("\n ---Selamat datang di PIZZA HUD--- \n ")
# Pseudocode
# Manunjukkan Pilihan topping pizza
print("PILIH TOPPING PIZZAMU")
print("--> Frankfurter")
print("--> Meat Monsta")
print("--> Super Supreme")
print("--> Super Supreme Chicken")
# Pelanggan menginput pilihan toppingnya
toppingpizza = (input("Pilihanmu ? : "))
if toppingpizza == "Frankfurter":
    print("\n Harganya Rp. 50.000")
    hargatopping = 50000
elif toppingpizza == "Meat Monsta":
    print("\n Harganya Rp. 62.000")
    hargatopping = 62000
elif toppingpizza == "Super Supreme":
    print("\n Harganya Rp. 75.000")
    hargatopping = 75000
elif toppingpizza == "Super Supreme Chicken":
    print("\n Harganya Rp. 80.000")
    hargatopping = 80000
else :
    print = ("Error!")
    exit()
